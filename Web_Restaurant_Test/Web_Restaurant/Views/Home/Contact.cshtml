@{
    ViewBag.Title = "Liên Hệ";
}
<section class="contact-page">
    <div class="container">
        <h2>Liên Hệ Với Chúng Tôi</h2>
        <div class="contact-grid">
            <div class="contact-info-panel">
                <h3>Thông Tin Liên Hệ</h3>
                <p><strong>📍 Địa chỉ:</strong> 123 Đường ABC, TP. XYZ</p>
                <p><strong>📧 Email:</strong> <a href="mailto:lienhe@nhahangabc.com">lienhe@nhahangabc.com</a></p>
                <p><strong>📞 Điện thoại:</strong> <a href="tel:0123456789">0123 456 789</a></p>
            </div>
            <div class="contact-form-panel">
                <h3>Gửi Yêu Cầu</h3>
                <form action="@Url.Action("Submit", "Contact")" method="post">
                    <div class="form-group">
                        <label for="name">Họ và Tên:</label>
                        <input type="text" id="name" name="name" required />
                    </div>
                    <div class="form-group">
                        <label for="email">Email:</label>
                        <input type="email" id="email" name="email" required />
                    </div>
                    <div class="form-group">
                        <label for="message">Nội dung:</label>
                        <textarea id="message" name="message" required></textarea>
                    </div>
                    <button type="submit" class="btn">Gửi</button>
                </form>
            </div>
        </div>
        <div class="contact-map">
            <iframe src="https://maps.google.com/maps?q=123%20ABC%20Street&t=&z=13&ie=UTF8&iwloc=&output=embed"></iframe>
        </div>
    </div>
</section>

<style>
    .contact-page {
        padding: 60px 0;
        text-align: center;
    }

    .contact-grid {
        display: flex;
        justify-content: center;
        gap: 40px;
        flex-wrap: wrap;
    }

    .contact-info-panel, .contact-form-panel {
        background: white;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        width: 320px;
        text-align: left;
    }

        .contact-info-panel p {
            font-size: 16px;
            margin-bottom: 10px;
        }

        .contact-form-panel .form-group {
            margin-bottom: 15px;
        }

    .form-group input, .form-group textarea {
        width: 100%;
        padding: 10px;
        border: 2px solid #ddd;
        border-radius: 6px;
        transition: border 0.3s;
    }

        .form-group input:focus, .form-group textarea:focus {
            border-color: #ff6600;
        }

    .contact-map iframe {
        width: 100%;
        height: 300px;
        border-radius: 8px;
        border: none;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }
</style>
