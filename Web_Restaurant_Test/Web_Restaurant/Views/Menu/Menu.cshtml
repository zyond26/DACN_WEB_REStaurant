@{
    ViewBag.Title = "Thực Đơn";
    var menuItems = ViewBag.MenuItems as List<WebRestaurant.Models.FoodItem>;
}
<section class="menu-page">
    <div class="container">
        <h2>Thực Đơn</h2>

        <!-- Bộ lọc -->
        <div class="menu-filter">
            <label for="category">Loại món ăn:</label>
            <select id="category">
                <option value="all">Tất cả</option>
                <option value="main">Món chính</option>
                <option value="starter">Món khai vị</option>
                <option value="dessert">Món tráng miệng</option>
            </select>
            <label for="price">Giá tiền:</label>
            <select id="price">
                <option value="all">Tất cả</option>
                <option value="low">Dưới 100,000 VND</option>
                <option value="medium">100,000 - 300,000 VND</option>
                <option value="high">Trên 300,000 VND</option>
            </select>
        </div>

        <!-- Danh sách thực đơn -->
        <div class="menu-list grid-layout">
            @foreach (var item in menuItems)
            {
                <div class="menu-item-card">
                    <img src="@item.ImageUrl" alt="@item.Name" />
                    <div class="item-info">
                        <h3>@item.Name</h3>
                        <p>@item.Description</p>
                        <p class="price">@item.Price.ToString("C")</p>
                        <div class="item-actions">
                            <a href="@Url.Action("AddToCart", "Cart", new { foodId = item.Id })" class="btn">🛒 Thêm vào giỏ</a>
                            <a href="@Url.Action("FoodDetails", "Menu", new { id = item.Id })" class="btn btn-secondary">🔍 Xem chi tiết</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<style>
    /* Bố cục danh sách món ăn */
    .grid-layout {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-top: 30px;
    }

    /* Thẻ sản phẩm */
    .menu-item-card {
        background: #fff;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        transition: transform 0.3s ease-in-out;
        text-align: center;
    }

    .menu-item-card:hover {
        transform: translateY(-5px);
    }

    .menu-item-card img {
        width: 60%;
        height: 320px;
        object-fit: cover;
        border-bottom: 2px solid #ddd;
    }

    /* Thông tin món ăn */
    .item-info {
        padding: 15px;
    }

    .item-info h3 {
        margin-bottom: 10px;
        font-size: 18px;
    }

    .price {
        font-weight: bold;
        color: #e44d26;
        font-size: 16px;
        margin: 10px 0;
    }

    /* Nút bấm */
    .item-actions .btn {
        display: inline-block;
        padding: 10px;
        color: white;
        background: #ff5722;
        text-decoration: none;
        border-radius: 5px;
        transition: 0.3s;
    }

    .item-actions .btn:hover {
        background: #e44d26;
    }

    .btn-secondary {
        background: #333;
    }

    .btn-secondary:hover {
        background: #555;
    }

    /* Bộ lọc */
    .menu-filter {
        display: flex;
        justify-content: center;
        gap: 15px;
        margin-bottom: 20px;
    }

    .menu-filter select {
        padding: 5px 10px;
        font-size: 16px;
    }
</style>
