@model WebRestaurant.Models.Order
@{
    ViewBag.Title = "Trạng Thái Đơn Hàng";
}
<section class="order-status-page">
    <div class="container">
        <h2>Trạng Thái Đơn Hàng</h2>
        <div class="order-status-details">
            <p><strong>Mã Đơn Hàng:</strong> #@Model.OrderId</p>
            <p><strong>Khách Hàng:</strong> @Model.CustomerName</p>
            <p><strong>Trạng Thái:</strong> @Model.Status</p>
            <p><strong>Tổng Tiền:</strong> @Model.TotalAmount.ToString("C")</p>
        </div>
    </div>
</section>

<style>
    .order-status-details {
        background: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }

        .order-status-details p {
            margin: 10px 0;
            font-size: 18px;
        }
</style>
