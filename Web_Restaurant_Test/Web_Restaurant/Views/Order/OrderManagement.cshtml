@{
    ViewBag.Title = "Quản Lý Đơn Hàng";
    var orders = ViewBag.Orders as List<WebRestaurant.Models.Order>;
}
<section class="order-management-page">
    <div class="container">
        <h2>Quản Lý Đơn Hàng</h2>
        <table class="orders-table">
            <thead>
                <tr>
                    <th>Mã Đơn Hàng</th>
                    <th>Khách Hàng</th>
                    <th>Trạng Thái</th>
                    <th>Tổng Tiền</th>
                    <th>Hành Động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in orders)
                {
                    <tr>
                        <td>#@order.OrderId</td>
                        <td>@order.CustomerName</td>
                        <td>@order.Status</td>
                        <td>@order.TotalAmount.ToString("C")</td>
                        <td><a href="@Url.Action("OrderStatus", "Order", new { orderId = order.OrderId })" class="btn btn-info">Xem Chi Tiết</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>

<style>
    .orders-table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

        .orders-table th, .orders-table td {
            padding: 12px;
            border: 1px solid #ddd;
            text-align: center;
        }
</style>
